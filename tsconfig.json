{
    "compilerOptions": {
      "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/config.ts"],
    "exclude": ["node_modules"]
  }